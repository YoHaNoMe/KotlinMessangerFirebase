<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:paddingBottom="16dp">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="90dp"
                                                  android:layout_height="90dp"
                                                  app:civ_border_width="2.5dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                                                  android:id="@+id/new_messages_profileImage_circleImageView"/>
    <TextView
            android:text="UserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/new_messages_userName_textView"
            app:layout_constraintStart_toEndOf="@+id/new_messages_profileImage_circleImageView"
            app:layout_constraintTop_toTopOf="@+id/new_messages_profileImage_circleImageView"
            app:layout_constraintBottom_toBottomOf="@+id/new_messages_profileImage_circleImageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
